{
  "name": "ts-lib",
  "version": "1.0.0",
  "description": "simple TS library",
  "main": "index.js",
  "author": "Nana Adjei Manu",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "dependencies": {},
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "yarn test -- --watchAll",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky install"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transformers": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor"
    },
    "testRegex": ".*\\.spec\\.ts$"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
